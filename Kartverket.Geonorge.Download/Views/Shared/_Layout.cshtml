    var cp = (ClaimsPrincipal)User;
    foreach (var claim in cp.Claims)
    {
        <!-- @claim.Type = @claim.Value -->
    }

    <!-- roles: -->
    var roles = cp.FindAll(GeonorgeAuthorizationService.ClaimIdentifierRole);
    foreach (var role in roles)
    {
        <!-- @role.Value-->
    }
}

</body>
</html>
